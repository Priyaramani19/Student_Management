<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen.Student_Details">

    <RelativeLayout
        android:id="@+id/stu_d_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/stu_d_bck_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            app:tint="#17278C"
            android:src="@drawable/left_arrow">

        </ImageView>

        <TextView
            android:id="@+id/stu_d_form_txt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Student Details"
            android:textColor="#17278C"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/stdFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stu_d_header"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/stu_d_header"
            android:layout_marginTop="5dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/std1"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="@color/black"
                android:background="@drawable/std_round">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/std2"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/std1"
                app:cardCornerRadius="20dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/std_round">

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="2"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/std3"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/std2"
                app:cardCornerRadius="20dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/std_round">

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/std4"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/std3"
                app:cardCornerRadius="20dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/std_round">

                <TextView
                    android:id="@+id/txt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/std5"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/std4"
                app:cardCornerRadius="20dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/std_round">

                <TextView
                    android:id="@+id/txt5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/std6"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/std5"
                app:cardCornerRadius="20dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/std_round">

                <TextView
                    android:id="@+id/txt6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/std7"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/std6"
                app:cardCornerRadius="20dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/std_round">

                <TextView
                    android:id="@+id/txt7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/std8"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/std7"
                app:cardCornerRadius="20dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/std_round">

                <TextView
                    android:id="@+id/txt8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/std9"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/std8"
                app:cardCornerRadius="20dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/std_round">

                <TextView
                    android:id="@+id/txt9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/std10"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/std9"
                app:cardCornerRadius="20dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/std_round">

                <TextView
                    android:id="@+id/txt10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/std11"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/std10"
                app:cardCornerRadius="20dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/std_round">

                <TextView
                    android:id="@+id/txt11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/std12"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/std11"
                app:cardCornerRadius="20dp"
                app:strokeWidth="1.5dp"
                app:strokeColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/std_round">

                <TextView
                    android:id="@+id/txt12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stu_d_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stdFilter"
        android:layout_marginTop="10dp">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stu_d_header">

        <ImageView
            android:id="@+id/nodata_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            app:tint="#4D000000"
            android:src="@drawable/nodata"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nodata_img"
            android:layout_centerInParent="true"
            android:text="No Data Available..!!"
            android:textColor="#4D000000"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>